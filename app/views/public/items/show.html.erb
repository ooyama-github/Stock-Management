<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
  </div>
  <div class="row">
    <div class=col-3>
      <% if @item.image.attached? %>
        <span><%= image_tag @item.image, size: "250x250" %></span>
      <% else %>
        <span><%= image_tag 'noimage.png',size: "250x250" %></span>
      <% end %>
    </div>
    <div class="col-6 offset-md-1">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>購入日時</td>
            <td><%= @item.purchased_at %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>購入金額</td>
            <td><%= @item.purchase_amount %>円</td>
          </tr>
          <tr>
            <td>売却金額</td>
            <td><%= @item.sale_amount %>円</td>
          </tr>
          <tr>
            <td>利益</td>
            <td><%= @item.sale_amount - @item.purchase_amount %>円</td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>メモ</td>
            <td><%= @item.memo %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="col text-center">
  <%= link_to '編集する', edit_item_path(@item.id), class: "btn btn-success" %>
  <%= link_to '削除する', item_path(@item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
</div>