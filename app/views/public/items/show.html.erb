<div class="container">
  <div class="row-lg-10">
    <h2>商品詳細</h2>
    <div class="col-10 offset-md-1">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>購入日時</td>
              <td><%= @item.Date_of_purchase %></td>
            </tr>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>購入金額</td>
              <td><%= @item.Purchase_amount %></td>
            </tr>
            <tr>
              <td>売却金額</td>
              <td><%= @item.Sale_amount %></td>
            </tr>
            <tr>
              <td>利益</td>
              <td></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td></td>
            </tr>
            <tr>
              <td>メモ</td>
              <td><%= @item.memo %></td>
            </tr>
          </tbody>
        </table>
        <div class="form-group">
          <%= link_to '編集する', edit_item_path, class: "btn btn-success" %>
        </div>
    </div>
  </div>
</div>