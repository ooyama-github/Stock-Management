<div class="container">
  <div class="row">
    <div class="col-10">
      <h1>　会員情報編集</h1>
      <%= form_with model: @customer, url: customers_update_path, method: :PATCH do |f| %>
      <%= render "public/shared/error_messages", resource: @customer %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :"氏名" %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :"メールアドレス" %></td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit :"編集内容を保存",class:"btn btn-success"%></td>
              <td><%= link_to "退会する", customers_unsubscribe_path(@customer), class:"btn btn-danger" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>