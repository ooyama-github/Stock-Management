<div class="login">
  <div class='container-fluid my-5'>
    <h2 class='ml-5'>新規登録</h2>
    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name),local: true do |f| %>
      <%= render 'public/shared/error_messages', resource: resource %>
  
      <div class='form-group'>
        <div class='col col-form-label'>
          <%= f.label :メールアドレス %> <span class="badge badge-danger">必須</span><br />
        </div>
        <div class='col'>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class:'form-control', required: true %>
        </div>
      </div>
  
      <div class='form-group'>
        <div class='col col-form-label'>
          <%= f.label :名前 %> <span class="badge badge-danger">必須</span><br />
        </div>
        <div class='col'>
          <%= f.text_field :name, autofocus: true, autocomplete: 'name', class:'form-control', required: true %>
        </div>
      </div>
  
      <div class='form-group'>
        <%= f.label :パスワード, class:'col col-form-label' %><br />
        <div class='col'>
          <%= f.password_field :password, autocomplete: 'new-password', class:'form-control', required: true %>
          <% if @minimum_password_length %>
            <small class='form-text text-muted'>(<%= @minimum_password_length %> 文字以上)</small>
          <% end %>
        </div>
      </div>
  
      <div class='form-group'>
        <%= f.label :パスワード（確認用）, class:'col col-form-label' %><br />
        <div class='col'>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class:'form-control', required: true %>
        </div>
      </div>
  
      <div class='form-group'>
        <div class='col'>
          <%= f.submit class:'form-control btn btn-info my-3' %>
        </div>
      </div>
    <% end %>
    <hr>
    <div class='text-center text-black-50'>
      <h2>既に登録済みの方</h2>
      <p><%= render "public/shared/links" %>からログインしてください。</p>
    </div>
  </div>
</div>