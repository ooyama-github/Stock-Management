<div class="container">
  <div class="row py-2">
    <div class="col-10">
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>
  <div class="row py-4">
    <div class="col-8">
     <table>
      <%= form_with model: @genre, url: genres_path do |f| %>
       <td class="col-2"><%= f.label :name, "ジャンル名"  %></td>
       <td class="col-2"><%= f.text_field :name,required: true %></td>
       <td class="col-4"><%= f.submit '新規登録', class: "btn btn-outline-success mb5 btn-lg" %></td>
      <% end %>
     </table>
     </div>
   </div>

   <div class="row">
     <div class="col-6">
      <table class='table'>
       <thead>
        <tr class="table-primary">
         <th>ジャンル</th>
         <th></th>
         <th></th>
        </tr>
       </thead>
       <tbody>
       <% @genres.each do |genre| %>
        <tr class="border-bottom">
         <td><%= genre.name %></td>
         <td><%= link_to '編集する', edit_genre_path(genre.id), class: "btn btn-success"%></td>
         <td><%= link_to '削除する', genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
        </tr>
       <% end %>
       </tbody>
      </table>
     </div>
   </div>