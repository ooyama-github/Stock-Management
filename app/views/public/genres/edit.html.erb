<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>ジャンル編集</h2>
    <div class="product-list">
        <%= form_with model:@genre, url: genre_path(@genre.id) do |f| %>
          <table>
            <td class="col-2 font-weight-bold"><%= f.label :name, "ジャンル名" %></td>
            <td class="col-2"><%= f.text_field :name,required: true %></td>
            <td class="col-4">
            <%= button_tag type: "submit",  class: "btn btn-success" do %>
              <i class="fas fa-edit"></i> <span class="d-none d-md-inline"> 変更を保存</span>
            <% end %>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>