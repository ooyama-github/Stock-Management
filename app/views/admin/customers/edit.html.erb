<%= alert %>

<div class="container">
  <div class="row-lg-10">
    <div class="col-11 offset-md-1">
      <div class="bg-light text-center">
        <p><%= @admin_customer.name %>さんの会員情報編集</p>
      </div>
    </div>
    <%= form_with model: @admin_customer, url: admin_customer_path, method: :patch do |f| %>
      <table class="table">
        <tr>
          <th class="table-primary">会員ID</th>
          <th><%= @admin_customer.id %></th>
        </tr>
        <tr>
          <th class="table-primary">氏名</th>
          <th><%= f.text_field :name,required: true %></th>
        </tr>
        <tr>
          <th class="table-primary">メールアドレス</th>
          <th><%= f.email_field :email,required: true %></th>
        </tr>
        <tr>
          <th class="table-primary">会員ステータス</th>
          <th>
            <% if @admin_customer.is_deleted == false %>
              <%= f.radio_button :is_deleted, false, checked:true, class:"text-success" %>有効
              <%= f.radio_button :is_deleted, true %>退会
            <% else %>
              <%= f.radio_button :is_deleted, false, class: "text-success" %>有効
              <%= f.radio_button :is_deleted, true, checked:true %>退会
            <% end %>
          </th>
        </tr>
      </table>
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    <% end %>
  </div>
</div>