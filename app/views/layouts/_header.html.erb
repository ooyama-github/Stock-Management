<header>
 <nav class="navbar navbar-light mb-2" style="background-color:#fff7ef;">
  <div class="container">
   <p class="text-left"><%= link_to root_path, data: {"turbolinks" => false} do %>
    <%= image_tag 'stock.jpg',size: '110x110' %>
    <% end %>
   </p>

 <!-- 顧客サインイン後-->
 <% if customer_signed_in? %>
  <span>ようこそ！<%= current_customer.name %>さん</span>
   <ul class="nav justify-content-end">
    <li class="nav-item">
     <%= link_to "マイページ", customers_mypage_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
     <%= link_to "在庫一覧", items_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
     <%= link_to "about", about_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
     <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "nav-link" %>
    </li>
   </ul>


   <!--＜管理者がログインした場合＞-->
      <% elsif admin_signed_in? %>
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <%= link_to "会員一覧",admin_customers_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
        </li>
      </ul>



  <!--＜サインインしていない場合＞-->
  <% else %>
  <ul class="nav justify-content-end">
   <li class="nav-item">
    <%= link_to "About", about_path, class: "nav-link" %>
   </li>
   <li class="nav-item">
    <%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %>
   </li>
   <li class="nav-item">
    <%= link_to "ログイン", customer_session_path, class: "nav-link" %>
   </li>
  </ul>
  <% end %>
